# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# PowerShell scripts
[*.{ps1,psm1,psd1}]
indent_size = 4
charset = utf-8-bom

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Justfiles
[justfile]
indent_style = space
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# Configuration files
[*.{conf,cfg,ini}]
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# HTML and templates
[*.{html,htm,njk,jinja,j2}]
indent_size = 2

# CSS and preprocessors
[*.{css,scss,sass,less}]
indent_size = 2

# XML and related
[*.{xml,xsl,xslt,svg}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Ansible files
[*.{ansible,ansible.yml,ansible.yaml}]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# EditorConfig itself
[.editorconfig]
indent_size = 2
